<%- include('../layouts/user/header'); -%>
<!-- PAGE BANNER SECTION -->
<div class="page-banner-section section">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="page-banner-content">
          <h1>Đăng ký</h1>
          <ul class="breadcrumb">
            <li><a href="/">Trang chủ</a></li>
            <li class="active">Đăng ký</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- PAGE SECTION START -->
<div class="page-section section pt-120 pb-120">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
        <div class="login-reg-form">
          <form action="/register" method="POST">
            <div class="row">
              <% if (errors.length > 0) { %>
              <div class="col-xs-12">
                <div class="alert alert-danger alert-dismissible" role="alert">
                  <button
                    type="button"
                    class="close"
                    data-dismiss="alert"
                    aria-label="Close"
                  >
                    <span aria-hidden="true">&times;</span>
                  </button>
                  <strong><%= Object.values(errors[0])[0] %></strong>
                </div>
              </div>
              <% } %>
              <div class="col-xs-12 mb-20">
                <label for="name">Tên <span class="required">*</span></label>
                <input id="name" name="name" type="text" required />
              </div>
              <div class="col-xs-12 mb-20">
                <label for="email">Email <span class="required">*</span></label>
                <input id="email" name="email" type="email" required />
              </div>
              <div class="col-xs-12 mb-20">
                <label for="phoneNumber"
                  >Số điện thoại<span class="required">*</span></label
                >
                <input
                  id="phoneNumber"
                  name="phoneNumber"
                  type="text"
                  required
                />
              </div>
              <div class="col-xs-12 mb-20">
                <label for="address"
                  >Địa chỉ<span class="required">*</span></label
                >
                <input id="address" name="address" type="text" required />
              </div>
              <div class="col-xs-12 mb-20">
                <label for="password"
                  >Mật khẩu<span class="required">*</span></label
                >
                <input id="password" name="password" type="password" required />
              </div>
              <div class="col-xs-12 mb-20">
                <label for="confirmPassword"
                  >Xác nhận mật khẩu<span class="required">*</span></label
                >
                <input
                  id="confirmPassword"
                  name="confirmPassword"
                  type="password"
                  required
                />
              </div>
              <div class="col-xs-12 mb-20">
                <input value="Đăng ký" type="submit" />
              </div>
              <div class="col-xs-12">
                Hoặc
                <a href="/login" style="margin: 0 4px;">Đăng nhập</a> ngay!
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- PAGE SECTION END -->
<%- include('../layouts/user/footer'); -%>
