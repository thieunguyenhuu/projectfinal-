<%- include('../layouts/user/header'); -%>
<!-- PAGE BANNER SECTION -->
<div class="page-banner-section section">
  <div class="container">
      <div class="row">
          <div class="col-xs-12">
              <div class="page-banner-content">
                  <h1>Thanh toán</h1>
                  <ul class="breadcrumb">
                      <li><a href="#">Trang chủ</a></li>
                      <li class="active">Thanh toán</li>
                  </ul>
              </div>
          </div>
      </div>
  </div>
</div>

<!-- PAGE SECTION START -->
<div class="page-section section pt-120 pb-80">
  <div class="container">
      <div class="row">
          <div class="col-md-12">
              <div class="customer-login mb-40">
                  <!-- LOGIN END -->						
              </div>
          </div>	
          <div class="checkout-form">						
                  <div class="col-lg-6 col-md-6 mb-40">
                      <form action="#">
                          
                          <h3>hoá đơn chi tiết</h3>
                          <div class="row">
                              <div class="col-sm-6 col-xs-12 mb-30">
                                  <label for="b_f_name">Tên <span class="required">*</span></label>										
                                  <input id="b_f_name" type="text">
                              </div>
                              <div class="col-sm-6 col-xs-12 mb-30">
                                  <label for="b_l_name">Họ <span class="required">*</span></label>									
                                  <input id="b_l_name" type="text">
                              </div>
                              <div class="col-xs-12 mb-30">
                                  <label>Địa chỉ <span class="required">*</span></label>
                                  <input type="text">
                              </div>
                              <div class="col-sm-6 col-xs-12 mb-30">
                                  <label for="b_email">Email của bạn <span class="required">*</span></label>										
                                  <input id="b_email" type="email">
                              </div>
                              <div class="col-sm-6 col-xs-12 mb-30">
                                  <label for="b_phone">Số điện thoại  <span class="required">*</span></label>										
                                  <input id="b_phone" type="text">
                              </div>
                              <div class="col-xs-12 mb-30">
                                  <input id="b_c_account" type="checkbox" data-target="createp_account">
                                  <label for="b_c_account">Tạo một tài khoản?</label>
                                  <div class="collapse mt-20" data-collapse="createp_account">
                                      <p>Tạo một tài khoản bằng cách nhập thông tin dưới đây. Nếu bạn là khách hàng cũ, vui lòng đăng nhập ở đầu trang.</p>
                                      <label for="b_a_password">Mật khẩu tài khoản<span class="required">*</span></label>
                                      <input id="b_a_password" type="password" placeholder="Mật khẩu">	
                                  </div>
                              </div>								
                          </div>
                      </form>											
                  </div>
                  <div class="col-lg-6 col-md-6 col-xs-12 mb-40">
                      <div class="coupon-form mb-30">
                          <h3>mã khuyến mãi</h3>
                          <p>Nhập mã khuyến mãi nếu bạn có ?</p>
                          <form action="#">
                              <input type="text" placeholder="Mã khuyến mãi">
                              <input type="submit" value="Đồng ý">
                          </form>
                      </div>
                      <div class="order-wrapper">
                          <h3>Đặt hàng của bạn</h3>
                          <div class="order-table table-responsive mb-30">
                              <table>
                                  <thead>
                                      <tr>
                                          <th class="product-name">Sản phẩm</th>
                                          <th class="product-total">Tổng cộng</th>
                                      </tr>							
                                  </thead>
                                  <tbody>
                                    <% if (result) { %> <% result.forEach(product => { %>
                                      <tr>
                                          <td class="product-name">
                                              <%= product.name %>  <strong class="product-qty"> × <%= product.qty%></strong>
                                          </td>
                                          <td class="product-total">
                                              <span class="amount"><%= product.price %> </span>
                                          </td>
                                      </tr>
                                  </tbody>
                                  <% }) %> <% } %>
                                  <tfoot>
                                      <tr>
                                          <th>Tổng tiền giỏ hàng</th>
                                          <td> </td>
                                      </tr>						
                                  </tfoot>
                              
                              </table>
                          </div>
                          <div class="payment-method">
                              <div class="panel-group" id="accordion">
                                  <div class="panel panel-default">
                                      <div class="panel-heading" id="headingOne">
                                          <h4 class="panel-title">
                                              <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                                              Chuyến khoản trực tiếp
                                              </a>
                                          </h4>
                                      </div>
                                      <div id="collapseOne" class="panel-collapse collapse in">
                                          <div class="panel-body">
                                              <p>Thanh toán trực tiếp vào tài khoản của chúng tôi.</p>
                                          </div>
                                      </div>
                                  </div>
                                  <div class="panel panel-default">
                                      <div class="panel-heading" id="headingThree">
                                          <h4 class="panel-title">
                                              <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseThree">
                                              PayPal
                                              </a>
                                          </h4>
                                      </div>
                                      <div id="collapseThree" class="panel-collapse collapse">
                                          <div class="panel-body">
                                              <p>Thanh toán bằng PayPal</p>
                                          </div>
                                      </div>
                                  </div>
                              </div>
                              <div class="order-button">
                                  <input type="submit" value="Đặt hàng">
                              </div>
                          </div>
                      </div>
                  </div>
          </div>
      </div>
  </div>
</div>
<!-- PAGE SECTION END -->
<%- include('../layouts/user/footer'); -%>