<!DOCTYPE html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>Outside - Minimalist Ecommerce HTML Template</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/images/favicon.ico" />

    <!-- All CSS Files -->
    <!-- Bootstrap css -->
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css" />
    <!-- Icon Font -->
    <link rel="stylesheet" href="/stylesheets/font-awesome.min.css" />
    <link rel="stylesheet" href="/stylesheets/pe-icon-7-stroke.css" />
    <!-- Plugins css file -->
    <link rel="stylesheet" href="/stylesheets/plugins.css" />
    <!-- Theme main style -->
    <!-- <link rel="stylesheet" href="/stylesheets/css.css"> -->
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <!-- Responsive css -->
    <link rel="stylesheet" href="/stylesheets/responsive.css" />

    <!-- Modernizr JS -->
    <script src="/javascripts/vendor/modernizr-2.8.3.min.js" defer></script>
  </head>

  <body>
    <!-- Body main wrapper start -->
    <div class="wrapper">
      <!-- START HEADER SECTION -->
      <header class="header-section section sticker">
        <div class="container">
          <div class="row">
            <div class="col-xs-12">
              <!-- logo -->
              <div class="header-logo float-left">
                <a class="logo" href="/">KAI <sup>perfume</sup></a>
              </div>
              <!-- header-search & total-cart -->
              <div class="float-right">
                <div class="header-option-btns float-right">
                  <!-- header-search -->
                  <div class="header-search float-left">
                    <button class="search-toggle" data-toggle="dropdown">
                      <i class="pe-7s-search"></i>
                    </button>
                    <div class="dropdown-menu header-search-form">
                      <form action="#">
                        <input type="text" placeholder="Search" />
                        <button><i class="fa fa-long-arrow-right"></i></button>
                      </form>
                    </div>
                  </div>
                  <!-- header Account -->
                  <!-- Header Cart -->
                  <div class="header-cart float-left">
                    <!-- Cart Toggle -->
                    <a class="cart-toggle" href="#" data-toggle="dropdown">
                      <i class="pe-7s-cart"></i>
                      <span>2</span>
                    </a>
                    <!-- Mini Cart Brief -->
                    <div class="mini-cart-brief dropdown-menu text-left">
                      <!-- Cart Products -->
                      <div class="all-cart-product clearfix">
                        <div class="single-cart clearfix">
                          <div class="cart-image">
                            <a href="product-details.html"
                              ><img src="images\product\cart-1.jpeg" alt=""
                            /></a>
                          </div>
                          <div class="cart-info">
                            <h5>
                              <a href="product-details.html"
                                >Le Parc Minotti Chair</a
                              >
                            </h5>
                            <p>1 x £9.00</p>
                            <a
                              href="#"
                              class="cart-delete"
                              title="Remove this item"
                              ><i class="pe-7s-trash"></i
                            ></a>
                          </div>
                        </div>
                        <div class="single-cart clearfix">
                          <div class="cart-image">
                            <a href="product-details.html"
                              ><img src="images\product\cart-2.jpeg" alt=""
                            /></a>
                          </div>
                          <div class="cart-info">
                            <h5>
                              <a href="product-details.html"
                                >DSR Eiffel chair</a
                              >
                            </h5>
                            <p>1 x £9.00</p>
                            <a
                              href="#"
                              class="cart-delete"
                              title="Remove this item"
                              ><i class="pe-7s-trash"></i
                            ></a>
                          </div>
                        </div>
                      </div>
                      <!-- Cart Total -->
                      <div class="cart-totals">
                        <h5>Total <span>£12.00</span></h5>
                      </div>
                      <!-- Cart Button -->
                      <div class="cart-bottom clearfix">
                        <a href="/checkout">Thanh toán</a>
                      </div>
                    </div>
                  </div>
                </div>
                <nav class="main-menu menu-right float-right">
                  <ul>
                    <li class="active"><a href="/">Trang chủ</a></li>
                    <li><a href="/products">Sản phẩm</a></li>
                    <li><a href="/news">Tin tức</a></li>
                    <li><a href="/about">Giới thiệu</a></li>
                    <% if (!locals.currentUser) { %>
                    <li><a href="/login">Đăng nhập</a></li>
                    <li><a href="/register">Đăng ký</a></li>
                    <% } else { %>
                    <li>
                      <a href="#">
                        <%= locals.currentUser.name %> <% if
                        (locals.currentUser.avatar) { %>
                        <img
                          class="avatar"
                          src="/uploads/<%= locals.currentUser.avatar %>"
                        />
                        <% } %>
                      </a>
                      <ul class="sub-menu">
                        <li><a href="/profile">Trang cá nhân</a></li>
                        <% if (locals.currentUser.isAdmin) { %>
                        <li><a href="/admin/dashboard">Quản trị</a></li>
                        <% } %>
                        <li><a href="/logout">Đăng xuất</a></li>
                      </ul>
                    </li>
                    <% } %>
                  </ul>
                </nav>
              </div>
              <div class="mobile-menu"></div>
            </div>
          </div>
        </div>
      </header>
    </div>
  </body>
</html>
